<div class="page-header">
  <div class="pull-right">
    <%= link_to "New Person", new_person_path, class: "pull-right btn btn-info" %>
  </div>
  <h1>Staff</h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @people.each do |person| %>
    <tr>
      <td>
        <%= link_to "#{person.title} #{person.first_name} #{person.last_name}", person %>
      </td>
      <td>
        <%= link_to 'Edit', edit_person_path(person), class:'btn btn-info' %>
        <%= link_to 'Delete', person_path(person), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
